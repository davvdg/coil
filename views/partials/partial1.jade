div(ng-controller='JobCtrl')
	div(class="container")
		form
			div#mainclass(class='form-group')
				label MainClass
				input(type="text", name="mainclass", for="mainclass", ng-model='mainClass', class="form-control")
			div#arguments(class='form-group')
				label Arguments
				input(type="text", name="arguments", for="arguments", ng-model='arguments', class="form-control")
			div#arguments(class='form-group')
				label Ressource
				input(type="text", name="ressource", for="arguments", ng-model='ressource', class="form-control")

	div(ng-controller='ConfCtrl', class="container")
		h3 Spark Conf
		div(class='table-responsible')
			table(class='table')
				thead
				tr
					th key
					th value
					th #
				tbody
				tr(ng-repeat='key in confsKeys')
					td {{key}}
					td
						input(type="text", ng-model='confs[key]',class="form-control")
					td
						button(ng-click="delConf()") del
				tr
					td
						input(type="text", ng-model='keyToAdd', class="form-control")
					td
						input(type="text", ng-model='valueToAdd', class="form-control")
					td
						button(ng-click="addConf()") add
			button(ng-click='submitJob()') submit